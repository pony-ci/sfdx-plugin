{
  "name": "@pony-ci/sfdx-plugin",
  "version": "1.0.0",
  "description": "Pony sfdx plugin to automate your application lifecycle.",
  "author": "Ondřej Kratochvíl",
  "bugs": "https://github.com/pony-ci/sfdx-plugin/issues",
  "dependencies": {
    "@oclif/command": "^1",
    "@oclif/config": "^1",
    "@oclif/errors": "^1",
    "@pony-ci/cli-exec": "^1.0.6",
    "@pony-ci/sfdx-node": "^1.0.4",
    "@salesforce/command": "^2",
    "@salesforce/core": "^2",
    "find": "^0.3.0",
    "fs-extra": "^8.1.0",
    "xml2js": "^0.4.22",
    "slash": "^3.0.0",
    "tslib": "^1"
  },
  "devDependencies": {
    "@adobe/jsonschema2md": "^4.1.1",
    "@oclif/dev-cli": "^1",
    "@oclif/plugin-help": "^2",
    "@oclif/test": "^1",
    "@salesforce/dev-config": "1.4.1",
    "@salesforce/ts-types": "^1.2.2",
    "@types/chai": "^4.2.11",
    "@types/fs-extra": "^8.1.0",
    "@types/mocha": "^7.0.2",
    "@types/node": "^10.17.18",
    "ajv": "^6.12.0",
    "chai": "^4.2.0",
    "cpy-cli": "^3.1.1",
    "globby": "^8",
    "json-schema-to-typescript": "^8.2.0",
    "lodash": "^4.17.15",
    "mocha": "^7.1.1",
    "nyc": "^14.1.1",
    "ts-node": "^8",
    "tslint": "^6.1.1"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "files": [
    "/dist",
    "/src/types",
    "/messages",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "homepage": "https://github.com/pony-ci/sfdx-plugin",
  "keywords": [
    "sfdx-plugin",
    "salesforcedx",
    "sfdx",
    "salesforce",
    "pony",
    "pony-ci",
    "ponyci"
  ],
  "license": "BSD-3-Clause",
  "oclif": {
    "commands": "./dist/commands",
    "bin": "sfdx",
    "devPlugins": [
      "@oclif/plugin-help"
    ]
  },
  "scripts": {
    "postpack": "rm -f oclif.manifest.json",
    "posttest": "tslint -p test -t stylish",
    "prepack": "rm -rf dist && tsc -b && oclif-dev manifest && oclif-dev readme && npm run schema2ts",
    "docs": "rm -r docs/reference/config; mkdir -p docs/reference/config; jsonschema2md -o docs/reference/config -d src/schema -x -",
    "schema2ts": "(cd src/schema && json2ts -i . -o ../../types)",
    "test": "nyc --extension .ts mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif-dev readme && git add README.md",
    "watch": "rm -rf dist && tsc --watch"
  }
}
