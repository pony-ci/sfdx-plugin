  "$id": "https://github.com/pony-ci/sfdx-plugin/blob/master/src/schema/replacements.schema.json",
  "title": "Replacements",
  "type": "object",
  "additionalProperties": {
    "$ref": "#/definitions/replacement"
  },
  "definitions": {
    "replacement": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "files": {
          "type": "array",
          "additionalItems": false,
          "items": {
            "type": "string"
          }
        },
        "replacement": {
          "type": "string"
        },
        "search": {
          "type": "array",
          "additionalItems": false,
          "items": {
            "type": "string"
          }
        }
      },
      "required": ["files", "search", "replacement"]
    }
  }
}
