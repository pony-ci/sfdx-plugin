{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/pony-ci/sfdx-plugin/blob/master/src/schema/data-config.schema.json",
  "title": "Data Config",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "sObjects": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "recordsDir": {
          "type": "string",
          "default": "data/sObjects"
        },
        "import": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "chunkSize": {
              "type": "number",
              "default": 200,
              "minimum": 1,
              "maximum": 200
            },
            "deleteBeforeImport": {
              "oneOf": [
                {
                  "enum": [
                    false,
                    "reversedOrder"
                  ]
                },
                {
                  "$ref": "#/definitions/sObjectNames"
                }
              ],
              "default": "reversed"
            },
            "soqlDeleteDir": {
              "type": "string",
              "default": "data/soql/delete"
            },
            "order": {
              "$ref": "#/definitions/sObjectNames"
            },
            "relationships": {
              "type": "array",
              "additionalItems": false,
              "items": {
                "$ref": "#/definitions/relationship"
              }
            }
          },
          "required": [
            "order"
          ]
        },
        "export": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "soqlExportDir": {
              "type": "string",
              "default": "data/soql/export"
            },
            "order": {
              "oneOf": [
                {
                  "$ref": "#/definitions/sObjectNames"
                },
                {
                  "type": "string",
                  "enum": [
                    "reversedOrder"
                  ]
                }
              ],
              "default": "reversedOrder"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "sObjectNames": {
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "relationship": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "sObject": {
          "type": "string"
        },
        "fieldMappings": {
          "type": "array",
          "additionalItems": false,
          "items": {
            "$ref": "#/definitions/fieldMapping"
          }
        }
      },
      "required": [
        "sObject",
        "fieldMappings"
      ]
    },
    "fieldMapping": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "relationshipName": {
          "type": "string"
        },
        "fieldName": {
          "type": "string"
        }
      },
      "required": [
        "relationshipName",
        "fieldName"
      ]
    }
  }
}
