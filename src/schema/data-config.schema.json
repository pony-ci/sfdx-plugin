{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/pony-ci/sfdx-plugin/blob/master/src/schema/data-config.schema.json",
  "title": "Data Config",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "import": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "deleteBeforeImport": {
          "oneOf": [
            {
              "enum": [
                true,
                false,
                "reversed"
              ]
            },
            {
              "$ref": "#/definitions/sObjects"
            }
          ],
          "default": "reversed"
        },
        "sObjects": {
          "$ref": "#/definitions/sObjects"
        },
        "relationships": {
          "type": "array",
          "additionalItems": false,
          "items": {
            "$ref": "#/definitions/relationship"
          }
        }
      },
      "required": [
        "sObjects"
      ]
    },
    "export": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "sObjects": {
          "$ref": "#/definitions/sObjects"
        }
      },
      "required": [
        "sObjects"
      ]
    }
  },
  "definitions": {
    "sObjects": {
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "relationship": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "sObject": {
          "type": "string"
        },
        "fieldMappings": {
          "type": "array",
          "additionalItems": false,
          "items": {
            "$ref": "#/definitions/fieldMapping"
          }
        }
      },
      "required": [
        "sObject",
        "fieldMappings"
      ]
    },
    "fieldMapping": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "source": {
          "type": "string"
        },
        "target": {
          "type": "string"
        }
      },
      "required": [
        "source",
        "target"
      ]
    }
  }
}
